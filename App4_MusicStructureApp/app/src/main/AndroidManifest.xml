<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.abhishek.musicstructureapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ProfileActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AlbumInfoActivity" android:parentActivityName=".ProfileActivity">
            <meta-data android:name="android.support.PARENT_ACTIVITY" android:value=".ProfileActivity"/>
        </activity>
        <activity android:name=".SingerInfoActivity" android:parentActivityName=".ProfileActivity">
            <meta-data android:name="android.support.PARENT_ACTIVITY" android:value=".ProfileActivity"/>
        </activity>
        <activity android:name=".AddSongActivity" android:parentActivityName=".ProfileActivity">
            <meta-data android:name="android.support.PARENT_ACTIVITY" android:value=".ProfileActivity"/>
        </activity>
    </application>

</manifest>